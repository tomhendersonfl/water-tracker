<%= form_for(Notification.new, url: notifications_path, method: :post) do |f| %>

<div class="card w-post">
  <div class="card-body">
    <%= f.hidden_field :type_of, value: 'broadcast' %>
    <%= f.hidden_field :state, value: 'original' %>
    <%= f.hidden_field :sender_id, value: current_user.user_id %>
    <%= f.text_area :body, :cols => 5, :rows => 3, :class => 'wp-text', :placeholder => "Broadcast a message to your Trackers..." %>

    <div class="tab-content p-0">
      <div class="wp-media tab-pane" id="wpm-image">
        Images - Coming soon...
      </div>

      <div class="wp-media tab-pane" id="wpm-video">
        Video Links - Coming soon...
      </div>

      <div class="wp-media tab-pane" id="wpm-link">
        Links - Coming soon...
      </div>
    </div>

    <div class="wp-actions clearfix">
      <%= f.submit 'Post', class: "btn btn-primary pull-right waves-input-wrapper waves-effect", style: "background: inherit" %>
    </div>
  </div>
</div>
<% end %>
