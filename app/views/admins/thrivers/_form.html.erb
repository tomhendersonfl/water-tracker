<h4 class="m-b-20">General Information</h4>

<%= form_for user, as: :thriver,  url: (user.new_record? ? admins_thrivers_path : admins_thriver_path), html: {id: "form-profile-thriver"} do |f| %>

<div class="row">
  <div class="col-md-12">
    <div class="form-group">
      <div class="fg-line">
        <label class="">Email Address</label>
        <%= f.text_field :email, class: "form-control", placeholder: "e.g. peter.pan@neverland.com" %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <div class="fg-line">
        <label class="">First Name</label>
        <%= f.text_field :first_name, class: "form-control", placeholder: "e.g. Peter" %>
      </div>
    </div>
  </div>
  <div class="col-md-6" style="margin-top: 0;">
    <div class="form-group">
      <div class="fg-line">
        <label class="">Last Name</label>
        <%= f.text_field :last_name, class: "form-control", placeholder: "e.g. Pan" %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <div class="fg-line">
        <label class="">Tenant</label>
        <%= f.select :subdomain, Tenant.all.collect {|p| [ p.tenant_name, p.subdomain ] }, {include_blank: false}, { class: "selectpicker" } %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <div class="fg-line">
        <label class="">Time Zone</label>
        <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, {include_blank: true}, { class: "selectpicker" } %>
      </div>
    </div>
  </div>
</div>


<h4 class="m-b-20">Contact Details</h4>

<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <div class="fg-line">
        <label class="">City</label>
        <%= f.text_field :city, class: "form-control", placeholder: "e.g. Aurora" %>
      </div>
    </div>
  </div>
  <div class="col-md-6" style="margin-top: 0;">
    <div class="form-group">
      <div class="fg-line">
        <label class="">Country</label>
        <%= f.country_select(:country, { priority_countries: ["US", "AU", "FR", "DE", "GB"], selected: "US" }, { class: 'selectpicker'}) %>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <div class="fg-line">
        <label class="">Mobile Phone</label>
        <%= f.text_field :mobile_number, class: "form-control", placeholder: "e.g. 7302242010" %>
      </div>
    </div>
  </div>
  <div class="col-md-6" style="margin-top: 0;">
    <div class="form-group">
      <div class="fg-line">
        <label class="">Home Phone</label>
        <%= f.text_field :home_number, class: "form-control", placeholder: "e.g. 7309034971" %>
      </div>
    </div>
  </div>
</div>


<h4 class="m-b-20">Thriver Options</h4>
<div class="row">
  <div class="col-md-12" style="margin-top: 0;">
    <label class="">Is Throttled?</label>
    <div class="checkbox">
      <label>
        <%= f.check_box :is_throttled? %>
        <i class="input-helper"></i>
        Indicates the thriver can only complete 2 activities per day.
      </label>
    </div>
  </div>
</div>

<div>
  <%= link_to "Cancel", :back, class: "btn btn-default m-t-10 m-r-5 waves-effect" if user.new_record? %>
  <%= link_to (user.new_record? ? 'Create' : 'Update'), "#", class: "btn btn-primary m-t-10 m-r-5 waves-effect", onclick: "$('#form-profile-thriver').submit()" %>

</div>

<% end %>
