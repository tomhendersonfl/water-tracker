<ol class="breadcrumb">
  <li><%= link_to "Back to Filters", admins_filters_path %></li>
  <li class="active">Edit Filter -
    <%= @filter.name %></li>
  </ol>

  <section id="content">
    <div class="container">

      <div class="block-header">
        <h2><%= @filter.name %></h2>
        <ul class="actions">
          <li>
            <a href="">
              <i class="fa fa-trash"></i>
            </a>
          </li>
          <li>
            <a href="">
              <i class="zmdi zmdi-refresh"></i>
            </a>
          </li>
        </ul>
      </div>

      <div class="row">

        <div class="col-md-4">
          <%#= render partial: 'admins/filters/summary', locals: {filter: @filter} %>
          <%#= render partial: 'admins/filters/filters' %>
        </div>
        <div class="col-md-8">
          <div class="card">
            <div role="tabpanel">
              <ul class="tab-nav tn-justified" role="tablist" data-tab-color="amber">
                <li class="active">
                  <a href="#filter-profile" aria-controls="home11" role="tab" data-toggle="tab">Filter</a>
                </li>
              </li>

            </ul>

            <div class="tab-content">
              <div role="tabpanel" class="tab-pane active" id="filter-profile">
                <%= render partial: 'admins/filters/form', locals: {filter: @filter} %>
              </div>
            </div>
          </div>

        </div>

      </div>

    </div>

  </div>
</section>
