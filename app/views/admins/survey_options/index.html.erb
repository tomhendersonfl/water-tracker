<section id="content">
    <div class="container">

        <div class="card">
            <div class="card-header ch-alt m-b-20">
                <h2>Survey Options
                    <small>Create, modify and publish Survey Options to the application.</small>
                </h2>
                <ul class="actions">
                    <li>
                        <a href="">
                            <i class="zmdi zmdi-refresh-alt"></i>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <i class="zmdi zmdi-download"></i>
                        </a>
                    </li>
                    <li class="dropdown">
                        <a href="" data-toggle="dropdown">
                            <i class="zmdi zmdi-more-vert"></i>
                        </a>

                        <ul class="dropdown-menu dropdown-menu-right">
                            <li>
                                <a href="">Change Date Range</a>
                            </li>
                            <li>
                                <a href="">Change Graph Type</a>
                            </li>
                            <li>
                                <a href="">Other Settings</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <a href="<%= new_admins_survey_option_path %>" class="btn bgm-red btn-float waves-effect"><i class="zmdi zmdi-plus"></i>
                </a>
            </div>

            <div class="table-responsive">
                <table id="grid-survey_options" class="table">
                    <thead>
                        <tr>
                            <th data-column-id="name">Name</th>
                            <th data-column-id="state">State</th>
                        </tr>
                    </thead>
                </table>
            </div>

        </div>

    </div>
</section>

<%= content_for :body_end do %>
<%= init_grid(
  "grid-survey_options",
  url: "/admins/survey_options.json",
  primaryKey: "survey_option_id",
  formatters: {

  },
  handlers: {
      click: { fn: :inspect, url: "/admins/survey_options", identifier: 'survey_option_id' }
  }
) %>
<% end %>
